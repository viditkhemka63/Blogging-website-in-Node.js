      </div>
   </section>
    
    
        
      <div class="container">
            <div class="comment-form">
                
                    <form class="form-contact comment_form" action="/addArticle" method="POST" id="commentForm">
                       <div class="row" id="main">
                           
                           <div class="col-sm-6">
                             <div class="form-group">
                                <input class="form-control" name="title" id="title" type="text" placeholder="title">
                             </div>
                          </div>
                          
                          

                          <div class="col-12">
                             <div class="form-group">
                                <textarea class="form-control w-100" name="text1" id="text1" cols="30" rows="9"
                                   placeholder="Tell your story" ></textarea>
                             </div>
                          </div>
                           

                          <div class="col-sm-6">
                                <div class="form-group">
                                   <input class="form-control" name="imageUrl" id="imageUrl" type="text" placeholder="imageUrl">
                                </div>
                           </div>
    
                           <div class="col-sm-6">
                                <div class="form-group">
                                   <input class="form-control" name="category" id="category" type="text" placeholder="category">
                                </div>
                           </div>

                       </div>

                       <div class="col-sm-6">
                           <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                 <div class="btn-group mr-2" role="group" aria-label="First group">
                                   <button type="button" class="fas fa-plus" onclick="create()"></button>
                                 </div>
                                 <div class="btn-group mr-2" role="group" aria-label="Second group">
                                   <button type="button" class="fas fa-image">   </button>
                                 </div>
                         </div>
                     </div>
                      <br> 
                       <div class="load_btn">
                          <button type="submit" class="btn_1">Submit </button>
                       </div>
    
                    </form>

            </div>
      </div>
   <script>
      function al() {
         alert('working');
      }

      var id = 1;
      
      function create() {
            var div = document.getElementById("main");
            var input = document.createElement("textarea");
            var cont = document.createElement("div");
            var previous = document.getElementById('text' + id.toString());

            if(previous.value !== '') {
               cont.classList.add('col-sm-12');
               cont.classList.add('form-group');
               cont.appendChild(input);
               
               id = id + 1;
               console.log(id);
               input.classList.add('form-control');
               input.classList.add('w-100');
               input.name = "post";
               input.maxLength = "5000";
               input.cols = "80";
               input.rows = "5";
               input.id = 'text' + id.toString();
               input.placeholder = "Tell your story"
               div.appendChild(cont); //appendChild
            }else {
               alert('previous paragraph is blank')
            } 
      }
   </script>   
